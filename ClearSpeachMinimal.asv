clear all;
close all;

% Load audio signal
[original,Fs] = audioread('clean_speech.wav');
Fn = Fs/2;
n = length(original);
m = 10000;

threshold = 0.1;

improved = slow(improved, Fs, 1.5);

improved = [];
for i = 1:length(original)
    if original(i) <= 1
        improved(i) = 2 * original(i);
    else
        improved(i) = 0.5 * original(i);
    end
end

figure;
plot(improved);

sound(improved, Fs);